#!/bin/bash
set -euo pipefail

HATS_DIR="$(cd "$(dirname "$0")" && pwd)"

if [[ "${1:-}" == "--run" ]]; then
    claude --system-prompt "$(cat "$HATS_DIR/roles/manager.md")" \
      -p "Review the current state of the project. Check features/*.feature, designs/, shared/, and status.json. Summarize progress and suggest next steps."
else
    claude --system-prompt "$(cat "$HATS_DIR/roles/manager.md")"
fi
